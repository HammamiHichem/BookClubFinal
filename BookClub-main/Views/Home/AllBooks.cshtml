@{
    ViewData["Title"] = "All Books";
}

<div class="container-fluid" style="height: 100vh; background-color: #343a40;">
    <div class="row justify-content-center align-items-center" style="height: 100%;">
        <div class="col-md-8">
            <div class="list-group">
                @foreach (var book in Model)
                {
                    <a href="@Url.Action("Details", "Books", new { id = book.BookId })" class="list-group-item list-group-item-action bg-dark text-white mb-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@book.Title</h5>
                            <small>Added by @book.Creator.FirstName @book.Creator.LastName</small>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
