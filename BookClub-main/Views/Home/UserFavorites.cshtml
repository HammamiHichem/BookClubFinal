@model List<Book>

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout"; // Spécifie le nom du layout à utiliser (par défaut, il cherche dans /Views/Shared/)
}


<h1>Your Favorite Books</h1>

@if (Model.Count == 0)
{
    <p>You haven't added any books to your favorites yet.</p>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <a href="@Url.Action("OneBook", "Home", new { id = book.BookId })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
