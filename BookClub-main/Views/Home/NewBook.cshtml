@{
    ViewData["Title"] = "Add a New Book";
    Layout = "_Layout";
}

<h2 class="text-white">Add a New Book</h2>


<form method="post" action="/book/add" class="container mt-5">
    <div class="card bg-secondary">
        <div class="card-body">
            <div class="form-group row">
                <label for="Title" class="col-sm-2 col-form-label">Title:</label>
                <div class="col-sm-10">
                    <input type="text" name="Title" class="form-control bg-white text-dark" id="Title" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="Description" class="col-sm-2 col-form-label">Description:</label>
                <div class="col-sm-10">
                    <textarea name="Description" class="form-control bg-white text-dark" id="Description" rows="5" required></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-dark">Add A Book</button>
                </div>
            </div>
        </div>
    </div>
</form>

